<div class="container">
  <h2>Idea Cubby</h2>

  <div class="row" id="form-container">
    <div class="col-md-8">
      <form class="form-inline" id="newIdea">
        <div class="form-group">
          <label for="titleField">Title:</label>
          <input class="form-control" type="text" id="titleField" name="idea[title]" placeholder="Enter a title!">
        </div>

        <div class="form-group">
          <label for="bodyField">Body:</label>
          <input class="form-control" type="text" id="bodyField" name="idea[body]" placeholder="Enter body!">
        </div>

        <button type="submit" id="submitIdea" class="btn btn-primary">Save Idea</button>
      </form>
    </div>

    <div class='col-md-4'>
      <form class="form-inline" role="search" id="searchIdea">
        <div class="form-group">
          <label for="searchField">Search:</label>
          <input type="text" class="form-control" id="searchField" placeholder="Search">
        </div>
      </form>
    </div>
  </div>

  <div class="ideas"></div>
    <table id='ideas_table' class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Quality</th>
          <th>Vote</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody id="table-body"></tbody>
    </table>
  </div>
</div>
