<div class="container">
  <h2>Lit Ideas</h2>

  <div class="row">
    <div class="col-md-6">
      <form class="form-inline" id="newIdea">
        <div class="form-group">
          <label for="titleField">Title</label>
          <input class="form-control" type="text" id="titleField" name="idea[title]" placeholder="Enter a title!">
        </div>

        <div class="form-group">
          <label for="bodyField">Body</label>
          <input class="form-control" type="text" id="bodyField" name="idea[body]" placeholder="Enter body!">
        </div>

        <button type="submit" id="submitIdea" class="btn btn-primary">Create Idea</button>
      </form>
    </div>

    <div class='col-md-6'>
      <form class="form-inline" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>


  <div class="ideas"></div>
    <table id='ideas_table' class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Quality</th>
          <th>Vote</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody id="table-body"></tbody>
    </table>
  </div>
</div>
